# Test to make sure automake correctly recognises presence of
# AC_CANONICAL_(BUILD|HOST|SYSTEM|TARGET), and creates config.* in
# all those cases.

. ./defs || exit 1

set -e

mv configure.in tmp-configure.in
: >Makefile.am


# Test all four of the AC_CANONICAL_* targets, including _SYSTEM, which is
# supported but deprecated by autoconf.  The last two produce harmless
# warnings ``AC_ARG_PROGRAM was called before AC_CANONICAL_TARGET''.
for macro in AC_CANONICAL_BUILD AC_CANONICAL_HOST \
             AC_CANONICAL_SYSTEM AC_CANONICAL_TARGET
do

    rm -f configure.in
    rm -Rf autom4te.cache

    cp tmp-configure.in configure.in
    echo $macro >>configure.in

    rm -f config.sub config.guess

    $ACLOCAL
    $AUTOMAKE --add-missing

    # Show the files which were generated
    ls

    test -f config.guess -a config.sub || exit 1
done

exit 0
